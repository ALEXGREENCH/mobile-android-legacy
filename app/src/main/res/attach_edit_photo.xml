<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dip"
    android:layout_height="80dip">

    <ImageView
        android:id="@+id/attach_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="#767880" />
    
    <ProgressBar
        android:id="@+id/attach_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:indeterminateOnly="false"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/attach_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="15dip"
        android:background="#50000000"
        android:visibility="gone"
        android:text="@string/error" />

    <ImageView
        android:id="@+id/attach_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/attach_overlay" />
    
    <ImageView
        android:id="@+id/attach_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="6dip"
        android:paddingLeft="6dip"
        android:paddingRight="4dip"
        android:paddingTop="3dip"
        android:src="@drawable/ic_attach_remove" />

</RelativeLayout>