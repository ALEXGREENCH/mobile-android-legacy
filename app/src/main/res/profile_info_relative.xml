<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_info_item"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/profile_info_photo"
        android:layout_width="47dip"
        android:layout_height="47dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/photo_loading" />

    <TextView
        android:id="@+id/profile_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_info_photo"
        android:duplicateParentState="true"
        android:text="Info Data"
        android:textColor="#000"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="3dip"
        android:textSize="17dip" />

    <TextView
        android:id="@+id/profile_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_info_text"
        android:layout_below="@+id/profile_info_text"
        android:duplicateParentState="true"
        android:text="Info title"
        android:textAllCaps="true"
        android:textColor="#96000000"
        android:textSize="12dip" />

</RelativeLayout>