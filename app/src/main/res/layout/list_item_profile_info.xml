<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/bg_profile_info_item">

    <TextView
        android:id="@+id/profile_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:text="Info title"
        android:textColor="#96000000"
        android:textAllCaps="true"
        android:textSize="12dip"/>

    <TextView
        android:id="@+id/profile_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:text="Info Data"
        android:textColor="#000"
        android:textSize="17dip" />
    <TextView
        android:id="@+id/profile_info_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:text="Info Subdata"
        android:textColor="#000"
        android:textSize="15dip" />

</LinearLayout>