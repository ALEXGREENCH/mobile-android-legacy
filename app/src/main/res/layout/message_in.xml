<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|bottom"
    android:paddingTop="4dip"
    android:paddingBottom="4dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/msg_sender_photo"
        android:layout_width="33dip"
        android:layout_height="33dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="8dip"
        android:src="@drawable/photo_loading" />

    <LinearLayout
        android:id="@+id/msg_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="3dip"
        android:background="@drawable/bg_msg_in_full"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:textSize="16dip"
            android:textColor="#000"
            android:layout_gravity="left"
            android:text="TextViewf" />

        <LinearLayout
            android:id="@+id/msg_attachments"
            android:layout_marginBottom="-10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:textSize="13dip"
        android:gravity="left"
        android:layout_marginLeft="-44dip"
        android:textColor="#9faab7"
        android:shadowDy="1"
        android:shadowColor="#FFF"
        android:shadowRadius="0.000001"
        android:textStyle="italic"
        android:text="22:22" />

</LinearLayout>
