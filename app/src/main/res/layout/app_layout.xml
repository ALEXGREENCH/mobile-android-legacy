<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <uk.openvk.android.legacy.ui.view.layouts.ActionBarImitation
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actionbar_imitation">

        </uk.openvk.android.legacy.ui.view.layouts.ActionBarImitation>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

                <uk.openvk.android.legacy.ui.view.layouts.ProgressLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/progress_layout"
                    android:visibility="gone" />

                <uk.openvk.android.legacy.ui.view.layouts.ErrorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/error_layout"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/app_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

</LinearLayout>