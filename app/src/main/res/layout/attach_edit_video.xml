<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dip"
    android:layout_height="80dip">

    <ImageView
        android:id="@+id/attach_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="#000" />

    <ImageView
        android:id="@+id/attach_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/attach_video_overlay" />
    
    <ImageView
        android:id="@+id/attach_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="6dip"
        android:paddingLeft="6dip"
        android:paddingRight="4dip"
        android:paddingTop="3dip"
        android:src="@drawable/ic_attach_remove" />

    <TextView
        android:id="@+id/attach_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_attach_video_play"
        android:text="3:11"
        android:textColor="#CFFF"
        android:layout_marginLeft="5dip"
        android:layout_marginBottom="5dip"
        android:drawablePadding="4dip"
        android:textSize="15dip" />

</RelativeLayout>