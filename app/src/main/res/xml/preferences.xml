	<PreferenceCategory
		android:layout="@layout/category_prefw"
		android:title="@string/sett_account">
		<Preference
			android:key="newsBanned"
			android:layout="@layout/pref_widget"
			android:summary="@string/sett_news_banned_summary"
			android:title="@string/sett_news_banned" />

		<Preference
			android:key="sync"
			android:layout="@layout/pref_widget"
			android:summary=""
			android:title="@string/sett_sync" />

		<Preference
			android:key="logOut"
			android:layout="@layout/pref_widget"
			android:summary=""
			android:title="@string/log_out" />
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/sett_other"
		android:layout="@layout/category_prefw">
		<Preference
			android:layout="@layout/pref_widget"
			android:id="@+id/debug_menu"
			android:key="debug_menu"
			android:title="@string/debug_menu" />
		<Preference
			android:layout="@layout/pref_widget"
			android:key="about_instance"
			android:title="@string/about_instance" />
		<Preference android:title="@string/menu_about"
			android:layout="@layout/pref_widget"
			android:key="about" />

	</PreferenceCategory>

</PreferenceScreen>
